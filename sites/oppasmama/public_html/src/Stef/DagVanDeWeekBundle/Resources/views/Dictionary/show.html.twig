{% extends 'StefBierInDeKlokBundle::layout.html.twig' %}

{% block content %}

            <div class="alphabet">
                <ul>
                    <div class="alphabet">
                        <ul>
                            {% for alphabet in 'a'|upper..'z'|upper %}
                                <li style="width: 2.75em;"><a href="{{ path('stef_bier_in_de_klok_dictionary_slug', { 'letter': alphabet|lower }) }}">{{ alphabet }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </ul>
            </div>
            <h1>{{ page.title }}</h1>
            {{ page.body|raw }}

{% endblock %}