    <div class="container">
        <div class="navbar-header">
            <!-- Button for smallest screens -->
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
            <a class="navbar-brand" href="http://dagvandeweek.nl">DagVanDeWeek.nl</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav pull-right">
                <li {{ current == "" ? 'class="active"' }}><a href="/">Home</a></li>
                <li {{ current == "historie" ? 'class="active"' }}><a href="/historie">Historisch Jaaroverzicht</a></li>
                <li {{ current == "kalender" ? 'class="active"' }}><a href="/kalender">Kalender Overzicht</a></li>
                <li {{ current == "nieuws" ? 'class="active"' }}><a href="/nieuws">Nieuws</a></li>


            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>