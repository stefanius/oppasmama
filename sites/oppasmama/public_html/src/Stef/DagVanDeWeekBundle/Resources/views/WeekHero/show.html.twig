{% extends "StefDagVanDeWeekBundle::layout.html.twig" %}

{% block content %}
    <div class="row">
        <article class="col-sm-9 maincontent">
            <header class="page-header">
                <h1 class="page-title">Weektopper {{ page.week }} uit {{ page.year }}</h1>
            </header>

            <p>{{ page.description }}</p>

            <h2>{{ page.title }}</h2>
            {{ page.body|raw }}
        </article>

        <aside class="col-sm-3 sidebar sidebar-right">

        </aside>
    </div>
{% endblock %}